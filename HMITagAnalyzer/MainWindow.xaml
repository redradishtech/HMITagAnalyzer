<Window x:Class="HMITagAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding WindowTitle}"
        Height="800" Width="1200"
        Background="#FAFAFA"
        FontFamily="Segoe UI">

    <Grid>
        <!-- Define Row Definitions -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!-- Header -->
            <RowDefinition Height="*" />    <!-- Main Content Area -->
            <RowDefinition Height="5" />    <!-- GridSplitter -->
            <RowDefinition Height="100" MinHeight="50" /> <!-- Activity Pane -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" /> <!-- Title Area -->
                <ColumnDefinition Width="Auto" /> <!-- Button Area -->
            </Grid.ColumnDefinitions>

            <!-- Title -->
            <Border Background="#4CAF50" BorderBrush="#388E3C" BorderThickness="0,0,0,1" CornerRadius="5" Padding="5">
                <TextBlock Text="HMI Diagram Tag Analyzer"
                           Foreground="White" FontSize="20" FontWeight="Bold" />
            </Border>

            <!-- Open HMI Diagram Button -->
            <Button Grid.Column="1"
                    Content="Open HMI Diagram"
                    Padding="10"
                    Margin="10,5,5,5"
                    Background="#E8F5E9"
                    Foreground="#2E7D32"
                    FontWeight="Bold"
                    BorderBrush="#2E7D32"
                    BorderThickness="2"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Click="SelectFileButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect ShadowDepth="2" Color="Black" Opacity="0.25" />
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <!-- Hover Effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C8E6C9" />
                                <Setter Property="BorderBrush" Value="#1B5E20" />
                            </Trigger>
                            <!-- Pressed Effect -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#A5D6A7" />
                                <Setter Property="BorderBrush" Value="#1B5E20" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" /> <!-- Left Section -->
                <ColumnDefinition Width="1*" /> <!-- Right Section -->
            </Grid.ColumnDefinitions>

            <!-- Left Section -->
            <Border Grid.Column="0" BorderBrush="#FF6F61" BorderThickness="2" CornerRadius="5" Background="White"
                    Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" /> <!-- Invalid Tags -->
                        <RowDefinition Height="*" /> <!-- Re-used Tags -->
                    </Grid.RowDefinitions>

                    <!-- Invalid Tags Section -->
                    <Grid Grid.Row="0" Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" /> <!-- Label -->
                            <RowDefinition Height="*" />   <!-- TextBox -->
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Margin="5,2,5,2">
                            <Label Content="Invalid Tag References:"
                                   FontSize="14" FontWeight="SemiBold"
                                   Foreground="#333333" />
                            <Label Content="{Binding InvalidTagCount}"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#333333" />
                        </StackPanel>
                        <TextBox Name="InvalidTagsTextBox"
                                 Grid.Row="1"
                                 Margin="5"
                                 Padding="5"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Visible"
                                 IsReadOnly="True"
                                 BorderBrush="#E0E0E0"
                                 BorderThickness="1"
                                 Background="#F7F7F7" />
                    </Grid>
                    <!-- Re-used Tags Section -->
                    <Grid Grid.Row="1" Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" /> <!-- Label -->
                            <RowDefinition Height="*" />   <!-- TextBox -->
                        </Grid.RowDefinitions>

                        <Label Content="Re-used Tags:"
                               Margin="5,2,5,2"
                               FontSize="14" FontWeight="SemiBold"
                               Foreground="#333333" />
                        <TextBox Name="ReusedTagsTextBox"
                                 Grid.Row="1"
                                 Margin="5"
                                 Padding="5"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Visible"
                                 IsReadOnly="True"
                                 BorderBrush="#E0E0E0"
                                 BorderThickness="1"
                                 Background="#F7F7F7" />
                    </Grid>
                </Grid>
            </Border>

            <!-- Right Section -->
            <Border Grid.Column="1" BorderBrush="#4CFF50" BorderThickness="2" CornerRadius="5" Background="White"
                    Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" /> <!-- Label -->
                        <RowDefinition Height="*" />   <!-- TextBox -->
                    </Grid.RowDefinitions>

                    <!-- Top margin is 2 (Left Section BorderThickness) + 5 (Left section Grid) -->
                    <StackPanel Orientation="Horizontal" Margin="5,7,5,2">
                        <Label Content="Used Tags:"
                               FontSize="14" FontWeight="SemiBold"
                               Foreground="#333333" />

                        <Label Content="{Binding UsedTagCount}"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#333333" />
                    </StackPanel>

                    <TextBox Name="UsedTagsTextBox"
                             Grid.Row="1"
                             Margin="5"
                             Padding="5"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Visible"
                             IsReadOnly="True"
                             BorderBrush="#E0E0E0"
                             BorderThickness="1"
                             Background="#F7F7F7" />
                </Grid>
            </Border>
        </Grid>

        <!-- GridSplitter -->
        <GridSplitter Grid.Row="2"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Center"
                      Background="#BDBDBD"
                      Height="5"
                      ResizeBehavior="PreviousAndNext" />

        <!-- Activity Pane -->
        <Border Grid.Row="3" Background="#F7F7F7" Padding="5" BorderBrush="#E0E0E0" BorderThickness="1">
            <TextBox Name="ActivityPane"
                     Padding="10"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Visible"
                     IsReadOnly="True"
                     BorderThickness="0"
                     Background="#FFFFFF" />
        </Border>
    </Grid>
</Window>